<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">Listado de Bancos</h1>
  </div>

  <% flash.each do |key, value| %>
    <div class="flash alert alert-<%= key %>">
    <%= value %>
    </div>
    <% end %>
  <%= yield %>

    <p>
      <%= link_to 'Agregar banco', new_bank_path %>
    </p>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
      <% @banks.each do |bank| %>
        <tr>
          <td>
            <%= link_to bank.name, {:action=>"edit", :controller=>"banks", :id=>bank.id} %>
          </td>
          <td class="item">
            <%= link_to 'Editar', {:action=>"edit", :controller=>"banks", :id=>bank.id} %>
            <%= link_to 'Eliminar', bank, method: :delete, data: { confirm: 'Seguro que deseas eliminar el banco?' } %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>