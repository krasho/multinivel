<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">Listado de Bancos</h1>
  </div>

    <%= render 'shared/flash_messages'%>
    <p>
      <%= link_to 'Agregar banco', new_bank_path %>
    </p>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
      <% @banks.each do |bank| %>
        <tr>
          <td>
            <%= link_to bank.name, {:action=>"edit", :controller=>"banks", :id=>bank.id} %>
          </td>
          <td class="item">
            <%= link_to 'Editar', {:action=>"edit", :controller=>"banks", :id=>bank.id} %>
            <%= link_to 'Eliminar', bank, method: :delete, :id => "del" + bank.id.to_s %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>