<div id="loggeo">
  <fieldset>
    <legend>Escribe tus claves de acceso</legend>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"form-horizontal") do |f| %>

    <!-- Text input-->
    <div class="control-group">
      <label class="control-label" for="textinput"><%= f.label :email, "Correo" %></label>
      <div class="controls">
        <%= f.email_field :email, autofocus: true, class: "input-xlarge", placeholder: "Ingresa tu correo" %>
      </div>
    </div>

    <br />

    <!-- Password input-->
    <div class="control-group">
      <label class="control-label" for="passwordinput"><%= f.label :password, "ContraseÃ±a" %></label>
      <div class="controls">
        <%= f.password_field :password, autocomplete: "off" , class: "input-xlarge", placeholder: "Ingresa tu Password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Entrar", class: "btn btn-primary" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </fieldset>

</div>

