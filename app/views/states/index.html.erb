<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">Cat√°logo de Estados</h1>
  </div>

  <div class="panel-body">

    <p>
      <%= link_to 'Agregar estado', new_state_path %>
    </p>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
      <% @states.each do |state| %>
        <tr>
          <td>
            <%= state.name %>
          </td>
          <td>
            <%= link_to 'Editar', {:action=>"edit", :controller=>"states", :id=>state.id} %>
            <%= link_to 'Eliminar', state, method: :delete, data: { confirm: 'Seguro que deseas eliminar el estado?' } %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>