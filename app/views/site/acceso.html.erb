<h1>Ingresa tus claves de acceso <h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@socio, url:{action:"create"}) do |f| %>
      <%= f.label :name, 'Nombre Completo'  %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :phone, 'Teléfono'  %>
      <%= f.text_field :phone, class: 'form-control' %>

      <%= f.label :email, 'Correo Electrónico'  %>
      <%= f.text_field :email, class: 'form-control' %>     
      <br />
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url:{action:"createUser"}) do |f| %>
      <%= f.label :username, 'Nombre de Usuario'  %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :password, 'Password'  %>
      <%= f.text_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, 'Confirmar password'  %>
      <%= f.text_field :password_confirmation, class: 'Confirmar password' %>     
      <br />
    <% end %>
  </div>
</div>