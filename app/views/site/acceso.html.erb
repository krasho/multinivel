<h1>Ingresa tus claves de acceso </h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url:{action:"createUser"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :username, 'Nombre de Usuario'  %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :password, 'Password'  %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, 'Confirmar password'  %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>     

      <br />
      <%= f.submit "2 de 2 - Terminar", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
