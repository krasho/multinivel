<h1>Registrar Promotor</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@socio, url:{action:"create"}) do |f| %>

      <% if @socio.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            The form contains <%= pluralize(@socio.errors.count, "error") %>.
          </div>
          <ul>
          <% @socio.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

    
      <h2>Datos Generales</h2>
      <%= f.label :name, 'Nombre Completo'  %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :phone, 'Teléfono'  %>
      <%= f.text_field :phone, class: 'form-control' %>

      <%= f.label :email, 'Correo Electrónico'  %>
      <%= f.text_field :email, class: 'form-control' %>

      <%= f.label :address, 'Dirección'  %>
      <%= f.text_field :address, class: 'form-control' %>

      <%= f.label :zip_code, 'Código Postal'  %>
      <%= f.text_field :zip_code, class: 'form-control' %>

      <h2>Datos de información para su sitio</h2>
      <%= f.label :username, 'Usuario'  %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control'%>

      <%= f.label :password_confirmation, "Confirmación" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
     
      <br />
      <%= f.submit "Registrar", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>