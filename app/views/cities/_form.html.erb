<%= form_for @city do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Nombre:' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :state_id, 'Estado:' %>
    <%= f.collection_select :state_id, @states, :id, :name, {prompt: true}, {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.submit 'Guardar', class: 'btn btn-primary' %>
  </div>
<% end %>
